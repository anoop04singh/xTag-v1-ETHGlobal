generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // IMPORTANT: For serverless environments like Vercel, use the Supabase connection pooler URL.
  // You can find it in your Supabase dashboard under Database > Connection pooling.
  // It should include `?pgbouncer=true` at the end.
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  nfcId              String   @unique
  walletAddress      String
  encryptedSignerKey String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model NfcTestMapping {
  nfcId      String   @id
  privateKey String
  createdAt  DateTime @default(now())
}